<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.happylittlebox.repartidor.bluetoothcontroller.MainActivity">

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.jmedeisis.bugstick.Joystick
            android:id="@+id/joystick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/bg_base">

            <ImageButton
                android:id="@+id/image_button_fernando"
                android:layout_width="@dimen/stick_size"
                android:layout_height="@dimen/stick_size"/>

        </com.jmedeisis.bugstick.Joystick>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:layout_toEndOf="@id/layout_joystick"
        android:layout_toRightOf="@id/layout_joystick">

        <Button
            android:id="@+id/button_fire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Fire"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</RelativeLayout>
